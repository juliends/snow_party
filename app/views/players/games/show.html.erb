<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @question.content %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ul>
        <% @question.answers.each do |answer| %>
          <li>
            <%= simple_form_for([:players, @game, @game_answer]) do |f| %>
              <%= f.input :answer_id, as: :hidden, input_html: { value: answer.id } %>
              <%= f.submit answer.content, class: "btn btn-primary" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
