<div class="container mobile-container d-flex flex-column justify-content-center">
  <h5 class="text-center text-white mb-5">
    Entrez votre adresse e-mail pour commencer à jouer
  </h5>
  <div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-md-6 col-lg-5">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true ,
                        input_html: {
                          autocomplete: "email",
                          class: 'form-control-lg'
                        },
                        label: false,
                        placeholder: "Email" %>
            <% if @quiz.school? %>
              <%= f.input :name, input_html: { class: 'form-control-lg'}, label: false, placeholder: 'Ton nom' %>
              <%= f.input :classroom, input_html: { class: 'form-control-lg'}, label: false, placeholder: 'Ta classe' %>
            <% end %>
            <%= f.input :gdpr_approval, label: 'En utilisant ce formulaire, vous acceptez que nous stockions vos données sur ce site web', label_html: {class: 'text-white'} %>
            <%= f.input :quiz, as: :hidden, input_html: { value: @quiz } %>
          </div>
          <div class="form-actions text-center mt-4">
            <%= f.button :submit, "Suivant", class: "btn btn-light btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  <%#= render "players/shared/links" %>
</div>
