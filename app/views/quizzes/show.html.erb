<div class="container mt-4">
  <div class="row">
    <div class="col-6">
      <h1>Quiz <%= @quiz.name %></h1>
    </div>
    <div class="col-6 d-flex justify-content-around">
      <p>
        <i class="fas fa-film"></i>
        Salle <%= @quiz.room %>
      </p>
      <p>
        <i class="far fa-user"></i>
        <%= @quiz.games.count %> participant
      </p>
      <p>
        <i class="far fa-user"></i>
        Confort: <%= @quiz.good_confort_percentage %> %
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Localisation</th>
            <th scope="col">Confort</th>
            <th scope="col">Score</th>
          </tr>
        </thead>
        <tbody>
          <% @quiz.players.each do |player| %>
              <tr>
                <td><%= player.email %></td>
                <td><%= player.last_name || "Non renseigné"%></td>
                <td><%= player.first_name || "Non renseigné"%></td>
                <td><%= player.location || "Non renseigné"%></td>
                <td><%= display_player_confort(player.games.find_by(quiz: @quiz)) %></td>
                <td><%= player.games.find_by(quiz: @quiz).score %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
